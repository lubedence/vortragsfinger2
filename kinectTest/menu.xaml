<UserControl x:Class="kinectTest.menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:k="http://schemas.microsoft.com/kinect/2014"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.Resources>
        <SolidColorBrush x:Key="brushColor" Color="Black"/>
    </UserControl.Resources>

    <Grid x:Name="menuGrid"  Background="#FF009B9B">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Slider Margin="10" AllowDrop="True" MinHeight="30" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="100" VerticalAlignment="Center" Grid.ColumnSpan="2" ValueChanged="onColorSliderValueChanged" Maximum="360" SmallChange="1">
            <Slider.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="3" ScaleX="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.LayoutTransform>
        </Slider>

        <Slider x:Name="sliderBrushThickness" Margin="10" AllowDrop="True" MinHeight="30" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="100" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1" ValueChanged="onLineSliderValueChanged" Minimum="5" Maximum="70" SmallChange="1" Value="20">
            <Slider.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="3" ScaleX="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.LayoutTransform>
        </Slider>

        <Rectangle Fill="{StaticResource brushColor}" Stroke="Black" Width="{Binding Value, ElementName=sliderBrushThickness}" Grid.Column="3" StrokeThickness="0" RadiusX="10" RadiusY="10" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,50"/>

        <RadioButton GroupName="drawType" Content="Freehand" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" IsChecked="True" Checked="RadioButton_Checked_Freehand">
            <RadioButton.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.LayoutTransform>
        </RadioButton>

        <RadioButton GroupName="drawType" Content="Straight freehand" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Grid.Column="1" Margin="0,0,0,0" Checked="RadioButton_Checked_FreehandStraight">
            <RadioButton.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.LayoutTransform>
        </RadioButton>

        <RadioButton GroupName="drawType" Content="Lines" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Margin="0,0,0,0" Grid.Column="2" Checked="RadioButton_Checked_Line">
            <RadioButton.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.LayoutTransform>
        </RadioButton>


    </Grid>
</UserControl>
